#include <iostream>
#include <cmath>

using namespace std;

int main() {
	double a,h;
	cout << "Введите ускорение (м/с^2):";
	cin>>a;
	cout << "Введите высоту (м):";
	cin>>h;
	if (a<0){
		cout << "Вы ввели неправильное значение ускорения.\nВведите другое ускорение (больше нуля):";
		cin>>a;}
	if (h<0){
		cout << "Вы ввели неправильное значение высоты.\nВведите другую высоту (больше нуля):";
		cin>>h;}
	double t = sqrt(2*h/a);
	cout << "Время необходимое для набора высоты "<<h<<" м: "<<t<<" c"<< endl;
	return 0;
}
