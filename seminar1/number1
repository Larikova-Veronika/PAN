#include <iostream>
using namespace std;

int main() {
	double S,V,ro,CL;
	cout << "Введите площадь крыла (м^2):";
	cin>>S;
	cout << "Введите скорость воздуха (м/с):";
	cin>>V;
	cout << "Введите плотность воздуха (кг/м^3):";
	cin>>ro;
	cout << "Введите коэффициент подъёмной силы (_):";
	cin>>CL;
	if (S<0){
		cout << "Вы ввели неправильное значение площади.\nВведите другую площадь крыла (м^2):";
		cin>>S;}
	if (ro<0){
		cout << "Вы ввели неправильное значение лотности воздуха.\nВведите другую плотность воздуха (кг/м^3):";
		cin>>ro;}
	if (CL<0){
		cout << "Вы ввели неправильное значение коэффициента подъёмной силы.\nВведите другую коэффициент подъёмной силы (_):";
		cin>>CL;}
	double L = S*V*V*2*ro*CL/2;
	cout << "Подъёмная сила для данных параметров:"<<L<<" H"<< endl;
	return 0;
}
