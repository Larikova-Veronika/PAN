#include <iostream>
using namespace std;

void L(double x,double y,double z,double t ){
	double LL=x*y*y*2*z*t/2;
	std::cout<<"Аэродинамическое сопротивление для данных параметров:"<<LL<<" H";
}


int main() {
	double S,V,ro,CD;
		cout << "Введите площадь крыла (м^2):";
		cin>>S;
		cout << "Введите скорость воздуха (м/с):";
		cin>>V;
		cout << "Введите плотность воздуха (кг/м^3):";
		cin>>ro;
		cout << "Введите коэффициент сопротивления (_):";
		cin>>CD;
		if (S<0){
			cout << "Вы ввели неправильное значение площади.\nВведите другую площадь (м^2):";
			cin>>S;}
		if (ro<0){
			cout << "Вы ввели неправильное значение лотности воздуха.\nВведите другую плотность (кг/м^3):";
			cin>>ro;}
		if (CD<0){
			cout << "Вы ввели неправильное значение коэффициента сопротивления.\nВведите другую коэффициент (_):";
			cin>>CD;}

		L(S,V,ro,CD); // prints !!!Hello World!!!
		return 0;
}
