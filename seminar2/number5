#include <vector>
#include <iostream>
#include <iomanip>
#include <numeric>
using namespace std;
struct Point { double x,y,z; };

int main() {
	const double vx=30.0, vy=20.0, vz=40.0, dt=1.0, t_max=100.0;
	std::vector<Point> traj;
	traj.reserve(t_max);
	double x=0.0, y=0.0, z=0.0;
	for (double t=0; t <= t_max; t += dt){
		x += vx*dt;
		y += vy * dt;
		z += vz * dt;
		traj.push_back(Point{x, y, z});}
	std::cout << std::setw(10) << "t "
			              << std::setw(15) << "x "
						  << std::setw(15) << "y "
						  << std::setw(15) << "z "
			              << std::endl;
			    std::cout << std::string(55, '-') << std::endl;
	size_t index = 0;
	for(const auto& point : traj){
		std::cout << std::fixed << std::setprecision(2)
				<< std::setw(10) << index * dt
				<< std::setw(15) << point.x
				<< std::setw(15) << point.y
				<< std::setw(15) << point.z << "\n";
		++index;
	}
	return 0;
}
