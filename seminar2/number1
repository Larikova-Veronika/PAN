#include <iostream>
#include <vector>
#include <iostream>
#include <iomanip>
using namespace std;

int main(){
	std::vector<double> times;
	std::vector<double> heights;
	const double v0 = 50.0, g = 9.8, dt = 1.0;
	double h=0.0;
	for (double t = -1.0;t<1000; t += dt){
		h = v0 * t - 0.5 * g * t * t;
		if (h < 0)break;
		times.push_back(t);
		heights.push_back(h);}
	 std::cout << std::setw(10) << "t (с)"
			 << std::setw(15) << "h (м)"
	         << std::endl;
	 std::cout << std::string(25, '-') << std::endl;
	 for (size_t i = 0; i < times.size(); i++) {
		 std::cout << std::setw(10) << std::fixed << std::setprecision(2) << times[i]
	                  << std::setw(15) << std::fixed << std::setprecision(2) << heights[i]
	                  << std::endl;
	    }
	return 0;
}
