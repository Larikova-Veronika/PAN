#include <vector>
#include <iostream>
#include <iomanip>
using namespace std;

int main() {
	std::vector<double> times, velocities;
	const double v0 = 50.0, g = 9.8, dt = 1.0;
	double v;
	for (double t = 0.0; t <= v0/g; t += dt){
		v = v0 - g * t;
	    times.push_back(t);
	    velocities.push_back(v); }
	std::cout << std::setw(10) << "t (с)"
		              << std::setw(15) << "v (м/c)"
		              << std::endl;
		    std::cout << std::string(25, '-') << std::endl;
		    for (size_t i = 0; i < times.size(); i++){
				std::cout << std::setw(10) << std::fixed << std::setprecision(2) << times[i]
								  << std::setw(15) << std::fixed << std::setprecision(2) << velocities[i]
								  << std::endl;}
}
