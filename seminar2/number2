#include <vector>
#include <iostream>
#include <iomanip>
using namespace std;

int main() {
	std::vector<double>times;
	std::vector<double>heights;
	const double v0 = 50.0, g = 9.8, dt = 1.0;
	double h=0.0;
	for (double t = 0.0; t <= 20; t += dt) {
		h = v0 * t - 0.5 * g * t * t;
	    if (h < 0) break;
	    times.push_back(t);
	    heights.push_back(h);
	}
	if(heights.empty()== true) cout <<"Данных нет"<<endl;
	size_t idx_max = 0;
	cout <<heights.size();
	for (size_t i = 1; i < heights.size(); ++i)
		if(heights[i] > heights[idx_max]) idx_max = i;
	cout <<"Индекс максимальной высоты: "<<idx_max<<endl;
	std::cout << std::setw(10) << "t max (с)"
	              << std::setw(15) << "h max (м)"
	              << std::endl;
	    std::cout << std::string(25, '-') << std::endl;
	    std::cout << std::setw(10) << std::fixed << std::setprecision(2) << times[idx_max]
	                      << std::setw(15) << std::fixed << std::setprecision(2) << heights[idx_max]
	                      << std::endl;
	return 0;
}
